        <TextBox x:Name="PrimeiroHealPercent" TextAlignment="Center" KeyUp="SetaPercentPrimeiroHeal" HorizontalAlignment="Left" Height="23" Margin="168,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" RenderTransformOrigin="-2.842,0.348" Grid.Column="1" Grid.RowSpan="2" Text="90"/>

        <TextBox x:Name="ManaHealPercent" KeyUp="SetaPercentManaHeal" TextAlignment="Center" HorizontalAlignment="Left" Height="23" Margin="168,237,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" RenderTransformOrigin="-2.842,0.348" Grid.Column="1" Grid.RowSpan="2" Text="50"/>
        <Label x:Name="label_Copy" Content="Hotkey" HorizontalAlignment="Left" Margin="90,209,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1" Height="26" Width="48" Grid.RowSpan="2"/>
        <Label x:Name="Percent_Copy" Content="Percent." HorizontalAlignment="Left" Margin="168,206,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1" Height="26" Width="52" Grid.RowSpan="2"/>
